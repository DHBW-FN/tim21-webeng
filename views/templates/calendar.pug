extends layout
block append head
    link(rel='stylesheet', href='/css/calendar.css')
    title Kalender
block content
    .calendar
        table#calendarTable
            tr
                th
                    strong Startzeit
                th
                    strong Endzeit
                th
                    strong Event
                th
                    strong Ort
            // Iterate through events and create a row with content for each
            each event in events
                if event["type"] === "VEVENT"
                    tr.calendarEntry
                        th #{event["start"]}
                        th #{event["end"]}
                        th #{event["summary"]}
                        th #{event["location"]}